---
import ChatsList from "@components/ChatsList.astro";
import "@styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Chat App</title>
  </head>
  <body>
    <header id="header"></header>

    <aside id="sidebar">
      <div class="search">
        <input placeholder="Search..." />
      </div>
      <div class="chats">
        <ChatsList />
      </div>
    </aside>

    <main>Message Pane</main>

    <footer>
      <form id="chat-form">
        <input
          id="chat-form__input"
          type="text"
          placeholder="Type a message..."
        />
        <button>Send</button>
      </form>
    </footer>
  </body>

  <script src="../scripts/chatService.ts"></script>

  <style is:global>
    html,
    body {
      font-family: Inter, system-ui, sans-serif;
      margin: 0;
      padding: 0;
      font-size: 1rem;
      background-color: var(--bg);
    }

    body {
      display: grid;
      grid-template-columns: var(--sidebar-width) 1fr;
      grid-template-areas:
        "sidebar header"
        "sidebar main"
        "sidebar footer";
      grid-template-rows: auto 1fr auto;
      height: 100vh;
      overflow: hidden;
    }

    ul {
      padding: 0;
    }
    input::placeholder {
      font-size: 1rem;
    }

    /* Header */
    header {
      position: sticky;
      top: 0;
      grid-area: header;
      height: var(--layout-header-height);
      border-bottom: 1px solid var(--border);
      z-index: 10;
      display: flex;
      align-items: center;
    }
    header .wrapper {
      display: flex;
      align-items: center;
      padding: 0 1rem;
      height: 100%;
      gap: 1rem;
    }
    header .user-avatar {
      height: 60px;
      width: 60px;
      flex-shrink: 0;
    }
    header img {
      object-fit: cover;
      border-radius: 50%;
      width: 100%;
      height: 100%;
    }
    header .meta {
      display: flex;
      flex-direction: column;
    }
    header .name {
      font-size: 1.4rem;
      font-weight: 600;
      line-height: 1.5;
    }
    header .title {
      color: var(--foreground);
      opacity: 0.6;
      font-size: 0.9rem;
    }

    /* ASIDE */
    aside {
      grid-area: sidebar;
      display: grid;
      grid-template-rows: auto 1fr;
      border-right: 1px solid var(--border);
      overflow-y: auto;
    }
    aside .search {
      display: flex;
      align-items: center;
      height: var(--layout-header-height);
      grid-column: 1 / -1;
      border-bottom: 1px solid var(--border);
    }
    aside .search input {
      justify-self: center;
      align-self: stretch;
      width: 100%;
      margin: 1rem;
      padding: 1rem;
    }
    aside > .chats {
      display: grid;
      grid-column: 1 / -1;
      grid-row: 2 / -1;
      place-self: stretch;
      justify-items: stretch;
    }

    /* Main */
    main {
      grid-area: main;
      display: grid;
      grid-template-columns: subgrid;
      padding: 1rem;
      overflow-y: auto;
    }

    /* FOOTER */
    footer {
      position: fixed;
      bottom: 0;
      right: 0;
      left: var(--sidebar-width);
      grid-area: footer;
      display: grid;
      grid-template-columns: subgrid;
      border-top: 1px solid var(--border);
      height: var(--layout-footer-height);
    }

    footer form {
      display: grid;
      grid-template-columns: 1fr auto;
      column-gap: 1rem;
      margin: 1rem;
    }
  </style>
</html>
